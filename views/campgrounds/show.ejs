<% include ../partials/header %>

<div class="ui container">

    <div class="ui vertical stripe segment">
        <div class="ui stackable grid container">
            <div class="row">
                <div class="four wide column">
                    <!-- left column-->
                    <div class="ui vertical menu">
                        <a class="active item">Editorials</a>
                        <a class="item">Reviews</a>
                        <a class="item">Upcoming Events</a>
                    </div>
                </div>
                <div class="twelve wide right floated column">

                    <img class="ui fluid image rounded" src="<%= campground.image %>">

                    <div class="ui segment">
                        <h1 class="ui header"><%= campground.name %></h1>
                        <p><%= campground.description %></p>
                        <div class="ui section divider hidden"></div>
                        <a href="/campgrounds/<%= campground._id%>/comments/new" class="ui button basic" tabindex="0">
                            Leave a Comment
                        </a>
                        <div class="ui comments">
                            <% campground.comments.forEach(function(comment) { %>
                            <div class="ui divider"></div>
                            <div class="comment">
                                <div class="content">
                                    <a class="author"><%= comment.author %></a>
                                    <div class="metadata">
                                        <div class="date">2 days ago</div>
                                    </div>
                                    <div class="text">
                                        <%= comment.text %>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






</div>





<% include ../partials/footer %>