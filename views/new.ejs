<% include partials/header %>

<div class="container">

    <h1 style="text-align: center; margin-top: 40px; margin-bottom: 40px">Create a New Campground</h1>
    <div class="row">
        <div style="width: 30%; margin: 0 auto; ">
            <form action="/campgrounds" method="post">
                <div class="form-group row">
                    <input class="form-control form-control-lg" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group row">
                    <input class="form-control form-control-lg" type="text" name="url" placeholder="image url">
                </div>
                <div class="form-group row">
                    <textarea class="form-control" name="description" placeholder="Please write a description" rows="5"></textarea>
                </div>
                <div class="form-group row">
                    <input class="btn btn-lg btn-outline-primary btn-block" type="submit" value="Submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>

<% include partials/footer %>